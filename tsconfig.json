{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata" : true,
    "outDir": "dist",
    "declaration" : true,
    "noImplicitAny": false,
    "noLib": false,
    "noEmitOnError": true,
    "removeComments": false,
    "preserveConstEnums": true
  },
  "exclude": [
    "dist",
    "typings",
    "node_modules"
  ]

}